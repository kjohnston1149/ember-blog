{{#if addNewBlog}}
  <h2>New Blog Entry</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Blog Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="image">IMage URL</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="author">Author name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="date">Date published</label>
        {{input value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="body">Blog body</label>
        {{input value=body id="body"}}
      </div>

      <button {{action 'saveBlog'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'blogFormShow'}}>New Blog Entry</button>
{{/if}}
