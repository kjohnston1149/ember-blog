{{#if updateBlogForm}}
  <h4>Update "{{blog.title}}"</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Blog Title</label>
        {{input value=title id="title" placeholder=blog.title}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=blog.image}}
      </div>
      <div class="form-group">
        <label for="author">Post author</label>
        {{input value=author id="author" placeholder=blog.author}}
      </div>
      <div class="form-group">
        <label for="date">Date Published</label>
        {{input value=date id="date" placeholder=blog.date}}
      </div>
      <div class="form-group">
        <label for="body">Blog body</label>
        {{input value=body id="body" placeholder=blog.body}}
      </div>

      <button class="btn btn-primary" {{action 'update' blog}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'updateBlogForm'}}>Update</button>
{{/if}}
